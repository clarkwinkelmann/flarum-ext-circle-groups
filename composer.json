        "flarum",
        "design",
        "groups"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "authors": [
        {
            "name": "Clark Winkelmann",
            "email": "clark.winkelmann@gmail.com",
            "homepage": "https://clarkwinkelmann.com"
        }
    ],
    "support": {
        "issues": "https://github.com/clarkwinkelmann/flarum-ext-circle-groups/issues",
        "source": "https://github.com/clarkwinkelmann/flarum-ext-circle-groups"
    },
    "require": {
        "flarum/core": "^0.1.0-beta.6"
